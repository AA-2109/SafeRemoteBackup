# Application Settings
HOST_IP=localhost
ADMIN_PASSWORD=your_secure_password_here
FLASK_SECRET_KEY=your_secret_key_here
MAX_UPLOAD_SIZE=100000000  # 100MB in bytes
SESSION_LIFETIME_MINUTES=30

# Cache Settings
CACHE_TYPE=simple  # Options: simple, filesystem, redis, memcached
CACHE_DEFAULT_TIMEOUT=300  # Cache timeout in seconds

# Elasticsearch Settings
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# File Storage Settings
UPLOAD_FOLDER=/app/static/uploads
SYNC_INTERVAL=300  # 5 minutes
SYNC_FOLDERS_LOCAL=/app/static/uploads
SYNC_FOLDERS_REMOTE=/remote/backup

# Security Settings
COMPRESSION_THRESHOLD=10485760  # 10MB in bytes 